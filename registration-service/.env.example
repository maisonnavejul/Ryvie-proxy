# Port to run the registration service on
PORT=8088

# Path to your Caddyfile (adjust to your server)
CADDYFILE_PATH=/home/ubuntu/Caddyfile

# Command to reload Caddy after writing new site blocks
CADDY_RELOAD_CMD=caddy reload --config /etc/caddy/Caddyfile

# Base domain used to build dynamic subdomains
BASE_DOMAIN=ryvie.fr

# Optional: deploy Caddyfile changes into a Docker container (instead of caddy reload)
# When enabled, the service will run:
#   docker cp $CADDYFILE_PATH $DOCKER_CONTAINER_ID:$DOCKER_CADDYFILE_PATH && docker restart $DOCKER_CONTAINER_ID
DOCKER_DEPLOY_ENABLED=false
DOCKER_CONTAINER_ID=8c5b49e2196c
DOCKER_CADDYFILE_PATH=/etc/caddy/Caddyfile

# Default backend targets for each service (customize to your infra)
TARGET_RDRIVE=100.90.20.50:3010
TARGET_RTRANSFER=100.90.20.50:3011
TARGET_RDROP=100.90.20.50:8080
TARGET_RPICTURES=100.90.20.50:2283
TARGET_APP=100.90.20.50:3000
TARGET_STATUS=100.90.20.50:3002
TARGET_BACKEND_RDRIVE=100.90.20.50:4000
TARGET_CONNECTOR_RDRIVE=100.90.20.50:5000
TARGET_DOCUMENT_RDRIVE=100.90.20.50:8090
